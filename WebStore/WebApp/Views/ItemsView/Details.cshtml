@using Extensions
@model BLL.App.DTO.Item

@{
    ViewData["Title"] = "Product info";
}

<h1> @Resources.Common.Details</h1>

<div>
    @Resources.Domain.Item.Item.ItemUnit
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Resources.Domain.Item.Item.Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Resources.Domain.Item.Item.Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Resources.Domain.Item.Item.Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Resources.Domain.Item.Item.Discount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-2">
            @Resources.Domain.Item.Item.Brand
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand!.Name)
        </dd>
        <dt class="col-sm-2">
            @Resources.Domain.Item.Item.Categories
        </dt>
        <dd class="col-sm-10">
            @foreach (var itemCategory in  Model.ItemCategories!)
            {
                <div>@itemCategory.Category!.Name</div>
            }
        </dd>
        @if (User.IsAuthorized())
        {
            <td>
                <a asp-action="AddToCart" asp-route-itemId="@Model.Id">
                    @Resources.Common.AddToCart
                </a>
                <a asp-action="AddToWishList" asp-route-itemId="@Model.Id"> @Resources.Common.AddToWishList</a>
            </td>
        }
    </dl>
</div>