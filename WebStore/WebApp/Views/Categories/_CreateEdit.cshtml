@model CategoryCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Category.Name" class="control-label">@Resources.Domain.Category.Category.Name</label>
    <input asp-for="Category.Name" class="form-control" />
    <span asp-validation-for="Category.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Category.ParentCategoryId" class="control-label">@Resources.Domain.Category.Category.ParentCategory</label>
    <select asp-for="Category.ParentCategoryId" class="form-control" asp-items="Model.CategorySelectList"></select>
    <span asp-validation-for="Category.ParentCategoryId" class="text-danger"></span>
</div>