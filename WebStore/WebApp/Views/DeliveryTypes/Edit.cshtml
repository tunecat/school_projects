@model BLL.App.DTO.DeliveryType

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resources.Common.Edit</h1>

<h4>
    @Resources.Domain.Delivery.Delivery.DeliveryTypeUnit
</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <partial name="_CreateEditPartial"/>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Shared._Layout.Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}