@model BLL.App.DTO.Brand

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Brand</h4>
    <hr/>

    <dl class="row">
        <dt class="col-sm-2">
            @Resources.Domain.Brand.Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
             @Resources.Domain.Brand.Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="ItemsView" asp-action="Index" asp-route-brandId="@Model.Id">@Resources.Domain.Brand.BrandProducts</a>
</div>