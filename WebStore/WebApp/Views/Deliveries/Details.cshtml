@using Extensions
@model DeliveryViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>@Resources.Domain.Delivery.Delivery.DeliveryUnit</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Delivery.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Delivery.User!.FirstLastName)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Delivery.Delivery.DeliveryTypeUnit
            </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Delivery.DeliveryType!.Name)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Delivery.Delivery.DeliveryCost
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Cost)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Delivery.Delivery.Destination
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Destination)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Delivery.Delivery.DeliveredAt
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Delivery.DeliveredAt)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Delivery.Delivery.Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Delivery.Status)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            @Resources.Domain.Delivery.Delivery.Name
        </th>
    </tr>
    </thead>
    <tbody>

    @{
        System.Diagnostics.Debug.Assert(Model.DeliveryItems != null, "Empty");
    }
    @foreach (var item in Model.DeliveryItems)
    {
        <tr>
            <td>
                <a asp-controller="ItemsView" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    @if (User.UserRole().Contains("Admin"))
    {
        <text><a asp-action="Edit" asp-route-id="@Model.Delivery.Id">@Resources.Common.Edit</a> | <a asp-action="Delete" asp-route-id="@Model.Delivery.Id">@Resources.Common.Delete</a>
            </text>
    }
    <a asp-action="Index">@Resources.Common.BackToList</a>
</div>
