@model BLL.App.DTO.Cart

@{
    ViewData["Title"] = "Clear";
}

<h3>Are you sure you want to clear cart?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Items Count
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CartItems.Count)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPriceWithoutVat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPriceWithoutVat)
        </dd>
    </dl>

    
    <form asp-action="Clear">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Clear Cart" class="btn btn-danger"/> |
        <a asp-action="Index">Back to Cart</a>
    </form>
</div>