@model BLL.App.DTO.Cart

<table class="table">
    <thead>
    <tr>
        <th>
            @Resources.Domain.Item.Item.ItemUnit
        </th>
        <th>
            @Resources.Domain.Item.Item.Price
        </th>
        <th>
            @Resources.Domain.ItemInCart.ItemInCart.ItemAmount
        </th>
        <th>
            @Resources.Domain.ItemInCart.ItemInCart.ItemPrice
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.CartItems)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.ItemId" class="row">
                    <div class="col-3">
                        <img class="card-img-top" src="https://cdn.icon-icons.com/icons2/1678/PNG/512/wondicon-ui-free-parcel_111208.png" alt="">
                    </div>
                    <div class="col-9">@Html.DisplayFor(modelItem => item.Item!.Name)</div>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPriceWithDiscount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemAmount)
                <a asp-action="DecreaseQuantity" asp-route-id="@item.Id">
                    <i style="font-size: 10px" class="fa fa-minus"></i>
                </a>
                <a asp-action="IncreaseQuantity" asp-route-id="@item.Id">
                    <i style="font-size: 12px" class="fa fa-plus"></i>
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-action="removeProduct" asp-route-id="@item.Id">Remove from cart</a>
            </td>
        </tr>
    }
    </tbody>
</table>